datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

  generator client {
  provider = "prisma-client-js"

}

model Record {
  id        Int      @id @default(autoincrement())
  type      String   // income | expense | remaining
  amount    Float
  reason    String
  date      DateTime
  createdAt DateTime @default(now())
}
